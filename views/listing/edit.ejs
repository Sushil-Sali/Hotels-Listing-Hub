<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-8 offset-2">
    <body>
      <h2>Edit Information</h2>
      <form action="/listings/<%= listing._id %> ?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-lable">Title</label>
          <input
            type="text"
            name="listing[title]"
            value="<%=listing.title%>"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3" >
          <label for="description" class="form-lable">Description</label>
          <textarea class="form-control"  name="listing[description]" required>
            <%=listing.description%></textarea>
        </div>

        <div class="mb-3">
          <label for="image" class="form-lable">Upload New Image</label>
          <input
            type="file"
            name="listing[image]"
            class="form-control"
          />
        </div>
        <div class="row">
          <div class="col-4">
            <div class="mb-3">
              <label for="price" class="form-lable">Price</label>
              <input
                type="number"
                name="listing[price]"
                value="<%=listing.price%>"
                class="form-control"
                required
              />
            </div>
          </div>
          <div class="col-8">
            <div class="mb-3">
              <label for="location" class="form-lable">Location</label>
              <input
                type="text"
                name="listing[location]"
                value="<%=listing.location%>"
                class="form-control"
                required
              />
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label for="country" class="form-lable">Country</label>
          <input
            type="text"
            name="listing[country]"
            value="<%=listing.country%>"
            class="form-control"
            required
          />
        </div>

        <button class="btn btn-dark">Add</button>
        <br /><br />
      </form>
      <script src="/js/script.js"></script>
    </body>
  </div>
</div>
