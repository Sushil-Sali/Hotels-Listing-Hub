<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-8 offset-2">
    <h2>Create new information</h2>
    <form
      action="/listings"
      method="post"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-lable">Title</label>
        <input
          type="text"
          name="listing[title]"
          placeholder="Enter your title"
          required
          class="form-control"
        />
        <div class="valid-feedback">looks good</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-lable">Description</label>
        <textarea
          name="listing[description]"
          placeholder="Enter your description"
          required
          class="form-control"
        ></textarea>
      </div>

      <div class="mb-3">
        <label for="img" class="form-lable">Upload Listing Image</label>
        <input
          type="file"
          name="listing[image]"
          class="form-control"
        />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-lable">Price</label>
          <input
            name="listing[price]"
            placeholder="15000"
            class="form-control"
            required
          />
          <div class="invalid-feedback">please provide proper price</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-lable">Country</label>
          <input
            type="text"
            name="listing[country]"
            placeholder="Enter your country"
            required
            class="form-control"
          />
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-lable">Location</label>
        <input
          type="text"
          name="listing[location]"
          placeholder="Enter your location"
          required
          class="form-control"
        />
      </div>

      <br />
      <div class="mb-3">
        <button class="btn btn-dark">Add</button>
      </div>
    </form>
  </div>
</div>
